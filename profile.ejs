<!DOCTYPE html>
<%- include('partials/header', { title: 'Your Page Title' }) %>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Profile</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .profile-picture {
            border-radius: 50%;
            width: 150px;
            height: 150px;
            object-fit: cover;
        }
        .profile-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .profile-info {
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <h1>User Profile</h1>
        <nav>
            <a href="/dashboard">Dashboard</a>
        </nav>
    </header>
    <main>
        <div class="profile-container">
            <form action="/profile" method="POST" enctype="multipart/form-data">
                <div class="profile-info">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" value="<%= user.name %>" <%= user.role === 'user' ? 'readonly' : '' %>>
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" value="<%= user.email %>" <%= user.role === 'user' ? 'readonly' : '' %>>
                    <% if (user.role === 'farmer') { %>
                        <label for="fruitId">Unique Fruit ID:</label>
                        <input type="text" id="fruitId" name="fruitId" value="<%= user.fruitId %>" readonly>
                    <% } %>
                    <label for="phone">Phone:</label>
                    <input type="tel" id="phone" name="phone" value="<%= user.phone %>" <%= user.role === 'user' ? 'readonly' : '' %>>
                </div>
                <% if (user.role === 'farmer') { %>
                    <button type="submit">Update Profile</button>
                <% } %>
            </form>
        </div>
    </main>
</body>
</html>
